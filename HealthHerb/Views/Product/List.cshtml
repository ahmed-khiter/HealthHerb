@model IEnumerable<Product>
@{
    Layout = "_AdminDashboard";
}

<div class="content-panel">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th class="hidden-phone">Price</th>
                    <th class="hidden-phone">Quantity</th>
                    <th class="hidden-phone">discount</th>
                    <th class="hidden-phone">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr class="gradeX">
                        <td><img style="max-width:100px" src="~/uploads/@record.Image" /></td>
                        <td>@record.Name</td>
                        <td class="hidden-phone">@record.Price</td>
                        <td class="center hidden-phone">@record.Quantity</td>
                        <td class="center hidden-phone">@record.Discount</td>
                        <td class="center hidden-phone">

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>