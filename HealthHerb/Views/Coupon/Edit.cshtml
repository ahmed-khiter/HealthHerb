@model CouponViewModel
@{
    ViewData["Title"] = "Edit Coupon";
    Layout = "_AdminDashboard";
}

<div class="row mt">
    <div class="col-lg-12">
        <h4><i class="fa fa-gift"></i> Edit coupon</h4>
        <div class="form-panel">
            <partial name="~/Views/Shared/_Alert.cshtml" />
            <form class="form-horizontal style-form" method="post" asp-controller="coupon" asp-action="edit">

                <input type="hidden" asp-for="Id" />

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="Code"></label>
                    <div class="col-lg-10">
                        <input placeholder="Product name" disabled asp-for="Code" class="form-control">
                        <span class="text-danger" asp-validation-for="Code"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="Amount"></label>
                    <div class="col-lg-10">
                        <input asp-for="Amount" class="form-control">
                        <span class="text-danger" asp-validation-for="Amount"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="ManyUsed"></label>
                    <div class="col-lg-10">
                        <input placeholder="Product quantity" asp-for="ManyUsed" class="form-control">
                        <span class="text-danger" asp-validation-for="ManyUsed"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="Start"></label>
                    <div class="col-lg-10">
                        <input placeholder="Product Price" asp-for="Start" class="form-control">
                        <span class="text-danger" asp-validation-for="Start"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="End"></label>
                    <div class="col-lg-10">
                        <input asp-for="End" class="form-control" />
                        <span class="text-danger" asp-validation-for="End"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Edit Coupon</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
