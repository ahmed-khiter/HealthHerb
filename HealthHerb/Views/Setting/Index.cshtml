@model IEnumerable<Order>
@{
    Layout = "_AdminDashboard";
}

<div class="content-panel">
    <h1><partial name="~/Views/Shared/_Alert.cshtml"/></h1>
    <h2><i class="fa fa-bar-chart-o" style="color:#4ECDC4"></i> System Statistics</h2>

    <div style="padding:15px"></div>

    <div class="row">

        <div class="col-md-3">
            <div class="box">
                <h5><i class="fa fa-money"></i> Total Sales</h5>
                <h2>£@TempData["total"]</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="box">
                <h5><i class="fa fa-calendar"></i> This day</h5>
                <h2>£@TempData["today"]</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="box">
                <h5><i class="fa fa-calendar"></i> This week</h5>
                <h2>£@TempData["week"]</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="box">
                <h5><i class="fa fa-calendar"></i> This month</h5>
                <h2>£@TempData["month"]</h2>
            </div>
        </div>
    </div>
</div>
