@model FrontWebsiteViewModel
@{
    Layout = "_AdminDashboard";
    ViewBag.Title = "front Website";
}

<partial name="~/Views/Shared/_Alert.cshtml" />

<div class="row mt">
    <div class="col-lg-12">
        <h4><i class="fa fa-angle-right"></i> Create Product</h4>
        <div class="form-panel">
            <form class="form-horizontal style-form" enctype="multipart/form-data" method="post" asp-controller="setting" asp-action="frontwebsite">
                <input type="hidden" asp-for="Id" />
                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="HeaderText"></label>
                    <div class="col-lg-10">
                        <input placeholder="Title of home page" asp-for="HeaderText" class="form-control">
                        <span class="text-danger" asp-validation-for="HeaderText"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label" asp-for="Text"></label>
                    <div class="col-lg-10">
                        <textarea placeholder="Subtitle of website" asp-for="Text" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Text"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label" asp-for="CurrentImage"></label>
                    <div class="col-lg-10">
                        <img class="img-fluid" style="max-width:120px" src="~/uploads/@Model.CurrentImage" />
                    </div>
                </div>

                <div class="form-group ">
                    <label class="col-lg-2 control-label">New image</label>
                    <div class="col-lg-10">
                        <input asp-for="Image" class="form-control">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
